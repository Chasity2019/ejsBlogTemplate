<%- include("partials/header"); -%>

<h2>HOME</h2>

<!-- pass each of the new list items back to the list from the server -->

<% posts.forEach(function(post){ %>
<h3><%= post.title%></h3>
<!-- <p> post.content </p> -->
<% if(post.content.length > 100){ %>
<p>
  <%= post.content.substring(0, 100) + "..." %><a href="posts/<%=post.title %>">
    Read More</a
  >
</p>
<% } else { %> <%= post.content %>
<a href="posts/<%=post.title %>"> Read More</a> <% }; %> <%});%>
<%-include("partials/footer"); -%>
