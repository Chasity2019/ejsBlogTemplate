<%- include("partials/header"); -%>

<h2>COMPOSE</h2>

<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="" class="form-label">Title</label>
    <input
      type="text"
      class="form-control"
      name="postTitle"
      placeholder="Title"
      autocomplete="off"
    />

    <label for="" class="form-label">Post</label>
    <!-- <input
      type="text"
      class="input-group"
      name="newContent"
      placeholder="Start typing..."
      autocomplete="off"
    /> -->
    <textarea
      class="form-control"
      name="postBody"
      aria-label="With textarea"
      rows="3"
    ></textarea>
  </div>
  <button type="submit" class="btn btn-primary" name="publishContent" value="">
    Publish
  </button>
</form>

<%- include("partials/footer"); -%>
